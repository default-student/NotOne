<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="match_parent"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="NotOne"
                android:textColor="?colorTextDayNight"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!---->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:paddingStart="80dp"
                android:text="About"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="?colorSecondary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="80dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="A Project by"
                        android:textColor="?colorTextDayNight"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="80dp"
                        android:paddingBottom="20dp"
                        android:text="Generic and \nDefault Student"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium" />
                </LinearLayout>
                <Button
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="?colorCanvas"
                    android:textAlignment="viewStart"
                    android:text="| VISIT THEIR PAGES"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?colorTextDayNight" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textColor="?colorTextDayNight"
                android:text="For"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingBottom="20dp"
                android:text="TH-OWL"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <!---->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="25dp"
                android:paddingStart="80dp"
                android:text="Licenses and Legal"
                android:textAppearance="@android:style/TextAppearance.Material.Large"
                android:textColor="?colorSecondary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textColor="?colorTextDayNight"
                android:text="App License"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingBottom="20dp"
                android:text="MIT"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:text="Third-Party Licenses"
                android:textColor="?colorTextDayNight"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="80dp"
                android:paddingBottom="20dp"
                android:text="..."
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
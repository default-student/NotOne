<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBar"
        android:background="?colorPrimaryVariant"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/canavas_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?colorPrimaryVariant"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <!--            only needed when the bar is to full -->
            <TextView
                android:id="@+id/tv_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TITLE"
                android:textColor="@color/white"
                android:textStyle=""
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/canvas_tools_unredo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:background="?colorPrimary" />

                <ImageButton
                    android:id="@+id/button_undo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_undo"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:contentDescription="UNDO"/>

                <ImageButton
                    android:id="@+id/button_redo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_redo"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:contentDescription="REDO"/>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/canvas_tools_pen"
                android:scrollbarSize="0dp"
                android:overScrollMode="never"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="20dp"
                android:background="?colorPrimaryVariant"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="end">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="end">

                    <Button
                        android:id="@+id/button_test"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:layout_marginHorizontal="150dp"
                        android:text="TEST" />

                    <Button
                        android:id="@+id/button_insert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_import"
                        android:text="Import"
                        android:contentDescription="Import"/>

                    <ImageButton
                        android:id="@+id/button_save_pen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_pen"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contentDescription="Use Saved Pen"/>

                    <ImageButton
                        android:id="@+id/button_add_pen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_add_pen"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contentDescription="Add a Pen Config"/>

                    <ImageButton
                        android:id="@+id/button_eraser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_eraser"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contentDescription="ERASER"/>

                    <Spinner
                        android:id="@+id/spinner_pen_colors"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/spinner_background"/>

                    <Spinner
                        android:id="@+id/spinner_pen_weights"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/spinner_background"
                        android:layout_width="80dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.appcompat.widget.Toolbar>


        <!--        </HorizontalScrollView>-->
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_toggle_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Hide Toolbar"
        android:src="@drawable/ic_arrow_head" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>